---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import { featuredPageContent } from '../data';
import { featuredPosts } from '../data';
import capy from '../../public/img/capy.jpg';
import { getCollection } from 'astro:content';

const reads = await getCollection('reads');

// Function to format date
function formatDate(dateString: string): string {
  const options: Intl.DateTimeFormatOptions = {
    day: 'numeric',
    month: 'short',
    year: 'numeric',
  };
  return new Date(dateString).toLocaleDateString('en-US', options);
}
---

<Layout seo={featuredPageContent.seo}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="text-3xl mb-1">Articles</h1>
    <!--TODO: remove how I fetch this data; using astro collections-->
    <p class="opacity-60 mb-14 subtitle">{featuredPageContent.subtitle}</p>

    <div class="grid grid-cols-1 gap-10 sm:gap-6 mb-10">
      {
        featuredPosts.map((post) => (
          <a
            href={post.url}
            class=" sm:flex sm:flex-row-reverse sm:justify-between sm:gap-6 post"
            target="_blank"
          >
            <Image
              src={capy}
              alt={post.image.url}
              width={100}
              height={100}
              quality={100}
              loading="lazy"
              decoding="async"
              densities={[1.5, 2]}
              class={'rounded-lg w-[100px] h-[100px] object-cover'}
            />
            <div class="mt-4 sm:my-auto">
              <p class="opacity-60 mb-2">
                {formatDate(post.date)} Â· {post.publisher}
              </p>
              <h3 class="font-medium hover-underline">{post.title}</h3>
            </div>
          </a>
        ))
      }
    </div>

    <div>
      <ul>
        {
          reads
            .sort((a: any, b: any) => (b.data.date.split("-")[1] - a.data.date.split("-")[1]))
            .map(read => (
            <a
              class="sm:flex sm:flex-row-reverse sm:justify-between sm:gap-6 post"
              href={`/reads/${read.slug}`}
            >
              <Image
                src={capy}
                alt="placeholder"
                width={100}
                height={100}
                quality={100}
                loading="lazy"
                decoding="async"
                densities={[1.5, 2]}
                class={'rounded-lg w-[100px] h-[100px] object-cover'}
              />
              <div>
                <p class="opacity-60 mb-2">{read.data.date}</p>
                <h3 class="font-medium hover-underline">{read.data.title}</h3>
              </div>
            </a>
          ))
        }
      </ul>
    </div>
  </section>
</Layout>
