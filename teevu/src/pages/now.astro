---
import Layout from "../layouts/Layout.astro";
import { nowPageContent } from "../data";
import SourceLinkBox from "../components/SocialLinkBox.astro";
import { Icon } from "astro-icon/components";
import CommunityLinkBox from "src/components/CommunityLinkBox.astro";
import HobbyLinkBox from "src/components/HobbyLinkBox.astro";

function formatDate(dateString: string) {
  const days = [
    "Sunday",
    "Monday",
    "Tuesday",
    "Wednesday",
    "Thursday",
    "Friday",
    "Saturday",
  ];

  const months = [
    "January",
    "February",
    "March",
    "April",
    "May",
    "June",
    "July",
    "August",
    "September",
    "October",
    "November",
    "December",
  ];

  const date = new Date(dateString);
  const dayName = days[date.getDay()];
  const monthName = months[date.getMonth()];
  const day = date.getDate();
  const year = date.getFullYear();
  let hours = date.getHours();
  const minutes = date.getMinutes();
  const ampm = hours >= 12 ? "PM" : "AM";
  hours = hours % 12;
  hours = hours ? hours : 12; // the hour '0' should be '12'
  const minutesStr = minutes < 10 ? "0" + minutes : minutes;

  return `${dayName}, ${monthName} ${day}, ${year} ${hours}:${minutesStr} ${ampm}`;
}

const lastModified = formatDate(new Date().toISOString());
---

<Layout seo={nowPageContent.seo}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="text-3xl mb-1">{nowPageContent.title}</h1>
    <p class="opacity-60 mb-10 subtitle">{nowPageContent.subtitle}</p>
    <div class="mb-14">
      <p class="mb-5 sm:text-left">
        Recently, I've been playing with Nest.js, trying to understand the
        backend from a higher level, and let me give you my honest opinion about
        this backend framework: I love it. The opinionated framework aligns with
        a structured style I enjoy; keeping the focus on the content and system
        itself, not weighing out where something goes in the project structure.
        Later, I plan on learning a systems language, so I could integrate an
        application to a bare-metal controller. It'll be a learning experience
        nonetheless.
      </p> 
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 group">
        {nowPageContent.sourceLinks.map((item) => <SourceLinkBox {...item} />)}
        <br /><br />
      </div>
    </div>

    <div class="mb-14">
      <p class="mb-5 sm:text-left">
        Besides listening to music, I've been getting into music production,
        more specifically, making jazzy hip-hop beats as a hobby.
      </p>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-2 group">
        {nowPageContent.hobbyLinks.map((item) => <HobbyLinkBox {...item} />)}
        <br /><br />
      </div>
    </div>

    <div class="mb-14">
      <p class="mb-5 sm:text-left">Community stuff</p>

      <div class="grid grid-col-1 sm:grid-cols-2 gap-2 group">
        {
          nowPageContent.communityLinks.map((item) => (
            <CommunityLinkBox {...item} />
          ))
        }
        <br /><br />
      </div>
    </div>

    <div
      class="p-4 mb-14 sm:text-left opacity-60 group-hover:opacity-30 hover:!opacity-100 transition-opacity border border-dashed border-gray-300 rounded-lg space-y-2 hover:cursor-pointer"
    >
      <div class="flex items-center space-x-2">
        <Icon
          name="mdi:calendar-clock"
          width={25}
          height={25}
          class="icon-inline"
        />
        <span>Last Modified: {lastModified}</span>
      </div>
      <div class="flex items-center space-x-2">
        <Icon
          name="mdi:map-marker-radius"
          width={25}
          height={25}
          class="icon-inline"
        />
        <span>Location: Seattle, WA</span>
      </div>
      <div class="flex items-center space-x-2">
        <Icon name="mdi:git" width={25} height={25} class="icon-inline" />
        <span
          >Committed by: <a href="https://github.com/tommyyv" target="_blank"
            >@teevu</a
          ></span
        >
      </div>
    </div>
  </section>
</Layout>
